<div class="container">
  <% if !@facebook_login %>
    <p class="gray_form">Pour utiliser votre compte Facebook, c'est par <%= link_to 'ici', omniauth_authorize_path(resource_name, 'facebook') %></p>
  <% end %>
  <%= simple_form_for(
        resource,
        as: resource_name,
        url: registration_path(resource_name),
        html: { class: 'green_form' },
        defaults: {
          wrapper_html: { class: 'form-group' }
        }
    ) do |f| %>

    <div class="form-inputs">

      <%= f.error_notification %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <% if @facebook_login %>
        <%= f.input :email, wrapper_html: { style: 'display: none' }, input_html: { value: @facebook_login[:email] } %>
        <%= f.input :password, wrapper_html: { style: 'display: none' }, input_html: { value: @facebook_login[:password_auto_generated] } %>
        <%= f.input :password_confirmation, wrapper_html: { style: 'display: none' }, input_html: { value: @facebook_login[:password_auto_generated] } %>
      <% else %>
        <%= f.input :email, autofocus: true %>
        <%= f.input :password, label: 'Mot de passe', placeholder: "Votre mot de passe" %>
        <%= f.input :password_confirmation, label: 'Confirmation mot de passe', placeholder: "Confirmez votre mot de passe" %>
      <% end %>
      <%= f.input :pseudo %>
      <%= f.input :first_name, label: 'Prénom' %>
      <%= f.input :name, label: 'Nom' %>
      <%= f.input :bio, label: "Qui êtes-vous en quelques mots " %>
      <%= f.input :avatar, label: 'Choisir une photo (obligatoire)' %>
      <hr />
      <div class="form-group"
        <%= f.label  "Date de naissance" %> </br>
        <%= f.date_field :birth_date, as: :date, label: "Date de naissance" %>
      </div>
      <%= f.input :address, label: 'Adresse' %>
      <%= f.input :zip, label: 'Code postal' %>
      <%= f.input :city, label: 'Ville' %>
      <%= f.input :country, priority: [ "France" ], label: 'Pays' %>
      <hr />
        <h4> Type de membre </h4>
        <div style="text-align: left">
          <ul style="list-style-type:none">
            <li>
              <%= radio_button_tag(:type_member, MEMBER_TYPE_AMATEUR, checked: true ) %>
              <%= label_tag(:Amateur, "Vous êtes amateur et vous ne faites rien payer") %>
            </li>
            <li>
              <%= radio_button_tag(:type_member, MEMBER_TYPE_PRO) %>
              <%= label_tag(:Pro, "Vous êtes professionnel et faites payer vos cours") %>
            </li>
          </ul>
        </div>

    </div>

    <hr />

    <div class="form-actions btn-group btn-group-justified" role="group">
      <div class="btn-group" role="group">
        <%= f.button :submit, "Enregistrer", class: 'btn btn-default' %>
      </div>
      <div class="btn-group" role="group">
        <%= link_to 'Annuler', session[:request_back], class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>

</div>
