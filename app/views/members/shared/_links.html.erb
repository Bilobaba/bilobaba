<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "J'ai oublié mon mot de passe !", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Je n'ai pas reçu d'email pour confirmer mon email !", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<hr />

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "M'inscrire avec mon email", new_registration_path(resource_name) %><br />
<% end -%>

<%= link_to member_facebook_omniauth_authorize_path do %>
  M'inscrire ou me connecter avec <%= image_tag 'FB-f-Logo__blue_29.png' %>
<% end %>
