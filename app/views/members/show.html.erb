<%= stylesheet_link_tag 'member' %>

<div class="container">
  <div id="show_member">
    <div id="avatar">
      <% if @member.avatar.url.present? %>
        <%= cl_image_tag @member.avatar.file.filename, width: 150, height: 150, title: @member.pseudo %>
      <% else %>
        <%= cl_image_tag 'eyht3fmfxk8b1o3zsykt.png', width: 150, height: 150, title: @member.pseudo %>
      <% end %>
    </div>
    <div id="description">
      <p><span id="pseudo"><%= @member.pseudo %></span></p>
      <p><%= @member.bio %></p>
      <p></p>
    </div> 
  </div>

  <div id="links">
    <%= link_to 'Retour', :back, class: 'badge' %>
    <%= link_to 'Editer', edit_member_registration_path, class: 'badge' if current_member == @member %>
  </div>

  <div id="events">
    <% if !@member.has_role?(:professional) %>
      <h2>Participation évènements</h2>
      <% if @member.attend_events.size > 0 %>
        <%= render partial: "events/events", locals: { events_partial: @member.attend_events } %>
      <% else %>
        <p>Vous n'êtes inscris à aucun évènement<br />
          <%= link_to '> voir la liste des évènements', events_path %>
        </p>
      <% end %>
    <% end %>
    <h2>Organisation évènements</h2>
     <% if @member.attend_events.size > 0 %>
        <%= render partial: "events/events", locals: { events_partial: @member.attend_events } %>
        <%= render partial: "events/events", locals: { events_partial: @member.organize_events } %>
      <% else %>
        <p>Vous n'organisez pour l'instant aucun évènement<br />
          <%= link_to '> créer un évènement', new_event_path %>
        </p>
      <% end %>
  </div>
</div>

