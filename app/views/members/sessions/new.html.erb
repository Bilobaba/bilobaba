<%= stylesheet_link_tag "remove_navbar_footer" %>

<div class="container sign-in">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'purple_form' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: 'Email', autofocus: true %>
      <%= f.input :password, label: 'Mot de passe' %>
      <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Valider' %>
      <hr />
      <%= render "members/shared/links" %>
    </div>
  <% end %>
</div>
