<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, label: 'Titre' %>
      <%= f.text_area :description, class: "form-control string optional",label: 'Description' %> </br>
      <% if @event.image.url.present? %>
        <%= cl_image_tag @event.image.file.filename, width: 824, height: 128, crop: :fill,
              radius: 5, :gravity => :face %>
      <% end %>
      <%= f.input :image, label: 'Image' %>
      <%= f.input :begin, label: 'DÃ©but' %>
      <%= f.input :end, label: 'Fin' %>
      <%= f.input :price_min, label: 'Prix min' %>
      <%= f.input :price_max, label: 'Prix max' %>
      <%= f.input :adress, label: 'Adresse' %>
      <%= f.input :town, label: 'Ville' %>
      <%= f.input :zip, label: 'CP' %>
      <%= f.input :photo1 , label: 'Photos 1' %>
      <%= f.input :photo2 , label: 'Photos 2' %>
      <%= f.input :photo3 , label: 'Photos 3' %>
      <%= f.input :photo4 , label: 'Photos 4' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
