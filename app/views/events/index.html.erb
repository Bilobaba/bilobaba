<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Events</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Begin</th>
        <th>End</th>
        <th>Price min</th>
        <th>Price max</th>
        <th>Adress</th>
        <th>Town</th>
        <th>Zip</th>
        <th>Lat</th>
        <th>Lng</th>
        <th>Organizer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.begin %></td>
          <td><%= event.end %></td>
          <td><%= event.price_min %></td>
          <td><%= event.price_max %></td>
          <td><%= event.adress %></td>
          <td><%= event.town %></td>
          <td><%= event.zip %></td>
          <td><%= event.lat %></td>
          <td><%= event.lng %></td>
          <td><%= event.organizer.email %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>
</div>
