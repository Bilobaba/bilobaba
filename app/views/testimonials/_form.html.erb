<div class="container">
  <%= simple_form_for(@testimonial) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, label: 'Titre', required: true %>
      <%= f.input :body, label: 'Texte', required: true %>
      <%= f.input :image, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
